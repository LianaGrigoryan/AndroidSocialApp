<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/profile"/>

    <TextView
        android:id="@+id/receiver_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/receiver_image"
        android:layout_toRightOf="@+id/receiver_image"
        android:background="@drawable/receiver_message"
        android:padding="10dp"
        android:text="message"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/sender-message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/sender_message"
        android:padding="10dp"
        android:text="message"
        android:textColor="@color/black" />

</RelativeLayout>