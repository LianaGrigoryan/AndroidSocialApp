<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background1">

    <ImageButton
        android:id="@+id/edit_edit_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_image" />

    <EditText
        android:id="@+id/edit_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_edit_img"
        android:ems="10"
        android:hint="Write something abount image..."
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/edit_edit_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_delete_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:text="Edit post" />

    <Button
        android:id="@+id/edit_delete_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:text="Delete post" />


</RelativeLayout>